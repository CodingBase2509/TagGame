<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net9.0-android;net9.0-ios</TargetFrameworks>
		
		<OutputType>Exe</OutputType>
		<RootNamespace>TagGame.Client</RootNamespace>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- Display name -->
		<ApplicationTitle>Tag Game</ApplicationTitle>

		<!-- App Identifier -->
		<ApplicationId>com.dasler.taggame</ApplicationId>

		<!-- Versions -->
		<ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
		<ApplicationVersion>1</ApplicationVersion>

		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">15.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">30.0</SupportedOSPlatformVersion>

		<RuntimeIdentifiers Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">android-arm;android-arm64;android-x86;android-x64</RuntimeIdentifiers>

		<AssemblyVersion>1.0.0.0</AssemblyVersion>
	</PropertyGroup>

		<!-- iOS signing: use entitlements only for device builds. Simulator should not use custom keychain groups. -->
		<PropertyGroup Condition="'$(TargetFramework)'=='net9.0-ios' and '$(RuntimeIdentifier)'=='ios-arm64'">
			<CreatePackage>false</CreatePackage>
			<CodesignEntitlements>Platforms\iOS\Entitlements.plist</CodesignEntitlements>
		</PropertyGroup>
		<PropertyGroup Condition="'$(TargetFramework)'=='net9.0-ios' and '$(RuntimeIdentifier)'=='iossimulator-arm64'">
			<CodesignEntitlements></CodesignEntitlements>
		</PropertyGroup>
	
	<PropertyGroup Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">
		<AndroidManifestPlaceholders>
			GOOGLE_MAPS_API_KEY=$(GOOGLE_MAPS_API_KEY)
		</AndroidManifestPlaceholders>
	</PropertyGroup>
	
	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\AppIcon\appicon.svg" ForegroundFile="Resources\AppIcon\appiconfg.svg" Color="#512BD4" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="Resources\Splash\splash.svg" Color="#512BD4" BaseSize="128,128" />

		<!-- Images -->
		<MauiImage Include="Resources\Images\*" />
		<MauiImage Update="Resources\Images\dotnet_bot.png" Resize="True" BaseSize="300,185" />
		<MauiImage Update="Resources\Images\avatar.svg" Resize="True" BaseSize="800,800" />

		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />

		<!-- Raw Assets (also remove the "Resources\Raw" prefix) -->
		<MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="CommunityToolkit.Maui" Version="11.2.0" />
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
		<PackageReference Include="Microsoft.Maui.Controls" Version="9.0.60" />
		<PackageReference Include="Microsoft.Maui.Controls.Compatibility" Version="9.0.60" />
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="9.0.4" />
		<PackageReference Include="Microsoft.Maui.Core" Version="9.0.60" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\TagGame.Client.Testables\TagGame.Client.Testables.csproj" />
	  <ProjectReference Include="..\TagGame.Shared\TagGame.Shared.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Update="Ui\Localization\StartPage.resx">
	    <Generator>ResXFileCodeGenerator</Generator>
	    <LastGenOutput>StartPage.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	  <EmbeddedResource Update="Resources\Localization\StartPage.de.resx">
	    <Generator>ResXFileCodeGenerator</Generator>
	    <LastGenOutput>StartPage.de.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	  <EmbeddedResource Update="Resources\Localization\InitPage.resx">
	    <Generator>ResXFileCodeGenerator</Generator>
	    <LastGenOutput>InitPage.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	  <EmbeddedResource Update="Resources\Localization\LobbyPage.resx">
	    <Generator>ResXFileCodeGenerator</Generator>
	    <LastGenOutput>LobbyPage.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	  <EmbeddedResource Update="Resources\Localization\LobbyPage.de.resx">
	    <Generator>ResXFileCodeGenerator</Generator>
	    <LastGenOutput>LobbyPage.de.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	  <EmbeddedResource Update="Resources\Localization\ToastMessages.resx">
	    <Generator>ResXFileCodeGenerator</Generator>
	    <LastGenOutput>ToastMessages.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	  <EmbeddedResource Update="Resources\Localization\ToastMessages.de.resx">
	    <Generator>ResXFileCodeGenerator</Generator>
	    <LastGenOutput>ToastMessages.de.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	  <EmbeddedResource Update="Resources\Localization\SettingsModal.resx">
	    <Generator>ResXFileCodeGenerator</Generator>
	    <LastGenOutput>SettingsModal.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	  <EmbeddedResource Update="Resources\Localization\SettingsModal.de.resx">
	    <Generator>ResXFileCodeGenerator</Generator>
	    <LastGenOutput>SettingsModal.de.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Ui\Localization\StartPage.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>StartPage.resx</DependentUpon>
	  </Compile>
	  <Compile Update="Resources\Localization\StartPage.de.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>StartPage.de.resx</DependentUpon>
	  </Compile>
	  <Compile Update="Resources\Localization\InitPage.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>InitPage.resx</DependentUpon>
	  </Compile>
	  <Compile Update="Resources\Localization\LobbyPage.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>LobbyPage.resx</DependentUpon>
	  </Compile>
	  <Compile Update="Resources\Localization\LobbyPage.de.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>LobbyPage.de.resx</DependentUpon>
	  </Compile>
	  <Compile Update="Resources\Localization\ToastMessages.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>ToastMessages.resx</DependentUpon>
	  </Compile>
	  <Compile Update="Resources\Localization\ToastMessages.de.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>ToastMessages.de.resx</DependentUpon>
	  </Compile>
	  <Compile Update="Resources\Localization\SettingsModal.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>SettingsModal.resx</DependentUpon>
	  </Compile>
	  <Compile Update="Resources\Localization\SettingsModal.de.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>SettingsModal.de.resx</DependentUpon>
	  </Compile>
	  <Compile Update="Platforms\Android\CustomImplementations\EntryHandlerConfig.cs">
	    <ExcludeFromCurrentConfiguration>false</ExcludeFromCurrentConfiguration>
	  </Compile>
	  <Compile Update="Platforms\Android\CustomImplementations\AdvancedMapHandler.cs">
	    <ExcludeFromCurrentConfiguration>false</ExcludeFromCurrentConfiguration>
	  </Compile>
	  <Compile Update="Platforms\Android\Handlers\AdvancedMapHandler.cs">
	    <ExcludeFromCurrentConfiguration>false</ExcludeFromCurrentConfiguration>
	  </Compile>
	  <Compile Update="Platforms\iOS\Handlers\AdvancedMapHandler.cs">
	    <ExcludeFromCurrentConfiguration>false</ExcludeFromCurrentConfiguration>
	  </Compile>
	</ItemGroup>


    <!-- iOS entitlements are used for codesigning via CodesignEntitlements
         and must not be embedded as a bundle resource. -->

</Project>
