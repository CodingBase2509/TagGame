<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:TagGame.Client.Ui.Extensions;assembly=TagGame.Client.Testables"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="TagGame.Client.Ui.Components.PlayerListItem"
             x:Name="This">
    <Grid ColumnDefinitions="Auto, *, *"
          ColumnSpacing="5"
          Margin="0, 5">
                                
        <Image Grid.Column="0"
               Source="avatar.png"
               HeightRequest="60" WidthRequest="60">
            <Image.Behaviors>
                <toolkit:IconTintColorBehavior
                    TintColor="{Binding Source={x:Reference This}, Path=IconColor}" />
            </Image.Behaviors>
        </Image>
                                
        <VerticalStackLayout Grid.Column="1"
                             HorizontalOptions="Fill"
                             VerticalOptions="Center">
            <Label Text="{Binding Source={x:Reference This}, Path= PlayerName}" 
                   FontSize="16"/>
            <Label Text="{extensions:Localization Key=owner, Page=LobbyPage}"
                   IsVisible="{Binding Source={x:Reference This}, Path=IsPlayerAdmin }"/>
        </VerticalStackLayout>
                                
        <Border Grid.Column="2" 
                Stroke="Transparent"
                StrokeThickness="2"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Padding="5">

            <Label Text="{Binding Source={x:Reference This}, Path=Playertype}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Source={x:Reference This}, Path=OpenPlayerTypeSelectCommand}" />
                </Label.GestureRecognizers>
            </Label>
            
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5" />
            </Border.StrokeShape>
            <Border.Triggers>
                <DataTrigger TargetType="Border"
                             Binding="{Binding Source={x:Reference This}, 
                                Path=CanEdit}"
                             Value="True">
                    <Setter Property="Stroke" Value="White"/>
                </DataTrigger>
                <DataTrigger TargetType="Border"
                             Binding="{Binding Source={x:Reference This}, 
                                Path=CanEdit}"
                             Value="False">
                    <Setter Property="Stroke" Value="Transparent"/>
                </DataTrigger>
            </Border.Triggers>
        </Border>


    </Grid>
</ContentView>