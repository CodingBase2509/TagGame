<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TagGame.Client.Ui.Components.ToastView"
             x:Name="Toast"
             IsVisible="False"
             BackgroundColor="Transparent"
             Margin="10"
             InputTransparent="True">
    
    <Border x:Name="ToastBorder" 
            StrokeThickness="1"
            HorizontalOptions="Fill"
            IsVisible="{Binding IsVisible, Source={x:Reference Toast}}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="6" />
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Brush="Black"
                    Offset="3, 10"
                    Radius="10"
                    Opacity="0.4"/>
        </Border.Shadow>
        
        <Grid ColumnDefinitions="Auto, *"
              RowDefinitions="4, Auto"
              RowSpacing="5">
            <BoxView Grid.Row="0"
                     Grid.ColumnSpan="2"
                     x:Name="ProgressLine"
                     HorizontalOptions="Fill"
                     VerticalOptions="Fill"/>
            
            <!-- Toast Content -->
            <Image Grid.Column="0" Grid.Row="1"
                   x:Name="ToastIcon"
                   Margin="10, 0, 10, 10"
                   WidthRequest="30"
                   Height="30"
                   HorizontalOptions="Center"/>
            
            <Label Grid.Column="1" Grid.Row="1"
                   x:Name="ToastMessage"
                   FontSize="14"
                   Margin="0, 0, 10, 10"
                   HorizontalTextAlignment="Start"
                   VerticalTextAlignment="Center"/>
        </Grid>
        
    </Border>
</ContentView>