<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:c="clr-namespace:TagGame.Client.Ui.Components"
             x:Class="TagGame.Client.Ui.Components.MinSecPicker"
             x:Name="This">
    <Grid ColumnDefinitions="*,*" HorizontalOptions="Center">
        
        <c:LabelElement Grid.Column="0"
                        Text="Min"
                        Orientation="Vertical"
                        LabelSpacing="2">
            <Picker x:Name="MinutesPicker"
                    IsEnabled="{Binding IsEnabled, Source={x:Reference This}}"
                    SelectedIndexChanged="OnMinutesChanged" />
        </c:LabelElement>
        
        <c:LabelElement Grid.Column="1"
                        Text="Sec"
                        Orientation="Vertical"
                        LabelSpacing="2">
            <Picker x:Name="SecondsPicker"
                    IsEnabled="{Binding IsEnabled, Source={x:Reference This}}"
                    SelectedIndexChanged="OnSecondsChanged" />
        </c:LabelElement>
    </Grid>

</ContentView>