<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TagGame.Client.Ui.Components.LabelElement"
             x:Name="This">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <StackLayout Spacing="{Binding LabelSpacing, Source={x:Reference This}}" 
                         Orientation="{Binding Orientation, Source={x:Reference This}}">
                <Label Text="{Binding Text, Source={x:Reference This}}"
                       FontSize="{Binding LabelFontSize, Source={x:Reference This}}"
                       VerticalOptions="Center"/>
                <ContentPresenter />
            </StackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>