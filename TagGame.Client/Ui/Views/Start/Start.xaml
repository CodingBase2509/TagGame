<?xml version="1.0" encoding="utf-8"?>
<PageWithModal xmlns="http://schemas.microsoft.com/dotnet/maui/global"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          xmlns:vm="clr-namespace:TagGame.Client.Core.Ui.ViewModels.Start;assembly=TagGame.Client.Core"
          x:Class="TagGame.Client.Ui.Views.Start.Start"
          x:DataType="vm:StartViewModel">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto"
          RowSpacing="60">
        <ImageButton Grid.Row="0"
                     Source="settings"
                     WidthRequest="48"
                     HeightRequest="48"
                     HorizontalOptions="End"
                     Command="{Binding OpenSettingsCommand}"/>

        <Label Grid.Row="1"
               Style="{StaticResource Headline}"
               Text="Tag Game"
               Margin="0, 20, 0, 80"/>

        <VerticalStackLayout Grid.Row="2"
                             Spacing="10">

            <Entry Text="{Binding RoomName}"
                   Placeholder="{Loc Start.RoomName}" />
            <Button Text="{Loc Start.CreateGame}"
                    Command="{Binding CreateRoomCommand}"
                    IsEnabled="{Binding CanCreateRoom}"/>

        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="3"
                             Spacing="10">

            <Entry Text="{Binding AccessCode}"
                   Placeholder="{Loc Start.AccessCode}"/>
            <Button Text="{Loc Start.JoinGame}"
                    Command="{Binding JoinRoomByCodeCommand}"
                    IsEnabled="{Binding CanJoinRoom}"/>

        </VerticalStackLayout>

        <Button Grid.Row="4"
                Style="{StaticResource SecondaryButton}"
                Text="{Loc Start.JoinWithQrCode}"
                Command="{Binding JoinRoomByQrCodeCommand}"/>
    </Grid>

</PageWithModal>
