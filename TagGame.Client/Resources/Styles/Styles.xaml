<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/maui/global"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ======================================================= -->
    <!--                       TAG GAME STYLES                   -->
    <!-- ======================================================= -->
    <!--  Alle MAUI-Standard-Controls + Custom Controls          -->
    <!--  Modern, futuristisch, Dark/Light Mode, Manrope Font    -->
    <!-- ======================================================= -->



    <!-- Global Page Style          -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"/>
    </Style>



    <!-- ActivityIndicator          -->
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color"
                Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}"/>
    </Style>



    <!-- IndicatorView              -->
    <Style TargetType="IndicatorView">
        <Setter Property="IndicatorColor"
                Value="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"/>
        <Setter Property="SelectedIndicatorColor"
                Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}"/>
    </Style>



    <!-- Border (statt Frame)       -->
    <Style TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 14" />
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Padding" Value="12"/>
    </Style>



    <!-- BoxView                    -->
    <Style TargetType="BoxView">
        <Setter Property="Color"
                Value="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"/>
    </Style>



    <!-- Button - Primary           -->
    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="ManropeMedium"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>

        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>

                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />

                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"/>
                            <Setter Property="TextColor"
                                    Value="{StaticResource TextDisabledBrush}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>

            </VisualStateGroupList>
        </Setter>
    </Style>



    <!-- Labels                     -->
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="ManropeRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
    </Style>

    <Style TargetType="Label" x:Key="Headline">
        <Setter Property="FontFamily" Value="ManropeSemiBold"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style TargetType="Label" x:Key="SubHeadline">
        <Setter Property="FontFamily" Value="ManropeSemiBold"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <!-- Entry / Editor             -->
    <Style TargetType="Entry">
        <Setter Property="FontFamily" Value="ManropeRegular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
        <Setter Property="PlaceholderColor"
                Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
    </Style>

    <Style TargetType="Editor" >
        <Setter Property="FontFamily" Value="ManropeRegular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
        <Setter Property="PlaceholderColor"
                Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
    </Style>

    <!-- ImageButton                -->
    <Style TargetType="ImageButton">
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">

                    <VisualState x:Name="Normal"/>

                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.5"/>
                        </VisualState.Setters>
                    </VisualState>

                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>



    <!-- Picker / DatePicker / TimePicker -->
    <Style x:Key="Picker" TargetType="Picker">
        <Setter Property="FontFamily" Value="ManropeRegular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="FontFamily" Value="ManropeRegular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style TargetType="TimePicker">
        <Setter Property="FontFamily" Value="ManropeRegular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>

    <!-- Switch                     -->
    <Style TargetType="Switch">
        <Setter Property="OnColor"
                Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}"/>
        <Setter Property="ThumbColor"
                Value="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"/>
    </Style>



    <!-- Slider                     -->
    <Style TargetType="Slider">
        <Setter Property="MinimumTrackColor"
                Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="MaximumTrackColor"
                Value="{StaticResource BorderBrush}"/>
        <Setter Property="ThumbColor"
                Value="{StaticResource PrimaryActiveBrush}"/>
    </Style>



    <!-- ProgressBar                -->
    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor"
                Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BackgroundColor"
                Value="{StaticResource BorderBrush}"/>
    </Style>



    <!-- SearchBar                  -->
    <Style TargetType="SearchBar">
        <Setter Property="FontFamily" Value="ManropeRegular"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBrush}"/>
    </Style>



    <!-- RefreshView                -->
    <Style TargetType="RefreshView">
        <Setter Property="RefreshColor"
                Value="{StaticResource PrimaryBrush}"/>
    </Style>



    <!-- Shadows                    -->
    <Style TargetType="Shadow">
        <Setter Property="Opacity" Value="0.4"/>
        <Setter Property="Brush" Value="{StaticResource ShadowBrush}"/>
        <Setter Property="Radius" Value="12"/>
        <Setter Property="Offset" Value="0,4"/>
    </Style>

</ResourceDictionary>
