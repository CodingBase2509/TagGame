<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/maui/global"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <!-- ======================================================= -->
  <!--                     TAG GAME COLORS                     -->
  <!-- ======================================================= -->
  <!--     Komplettes Theme: Dark Futuristic + Light Mode      -->
  <!-- ======================================================= -->


  <!-- ===================== -->
  <!--   PRIMARY COLORS      -->
  <!-- ===================== -->

  <!-- Haupttürkis für Buttons, Accents -->
  <Color x:Key="PrimaryLight">#00BFA6</Color>
  <Color x:Key="PrimaryDark">#00E1C6</Color>

  <!-- Für Button Hover, aktive States -->
  <Color x:Key="PrimaryActiveLight">#009C88</Color>
  <Color x:Key="PrimaryActiveDark">#00C0A7</Color>

  <!-- ===================== -->
  <!--   BACKGROUND COLORS   -->
  <!-- ===================== -->

  <Color x:Key="BackgroundLight">#F8FAFC</Color>
  <Color x:Key="BackgroundDark">#0B0F1F</Color>

  <Color x:Key="SurfaceLight">#FFFFFF</Color>
  <Color x:Key="SurfaceDark">#131A2E</Color>

  <!-- Modals / Popups -->
  <Color x:Key="OverlayDark80">#CC0B0F1F</Color>
  <Color x:Key="OverlayDark60">#990B0F1F</Color>

  <!-- ===================== -->
  <!--       TEXT COLORS     -->
  <!-- ===================== -->

  <Color x:Key="TextPrimaryLight">#1A1A1A</Color>
  <Color x:Key="TextPrimaryDark">#F1F5F9</Color>

  <Color x:Key="TextSecondaryLight">#4A4A4A</Color>
  <Color x:Key="TextSecondaryDark">#CBD5E1</Color>

  <Color x:Key="TextDisabledLight">#A5A5A5</Color>
  <Color x:Key="TextDisabledDark">#556070</Color>

  <!-- ===================== -->
  <!-- SECONDARY DISABLED BG -->
  <!-- ===================== -->

  <!-- Disabled-Background für Secondary-Buttons -->
  <Color x:Key="SecondaryDisabledLight">#F1F5F9</Color>
  <Color x:Key="SecondaryDisabledDark">#1F2937</Color>

  <!-- ===================== -->
  <!--     BORDER COLORS     -->
  <!-- ===================== -->

  <Color x:Key="BorderLight">#E2E8F0</Color>
  <Color x:Key="BorderDark">#334155</Color>

  <!-- Card Border -->
  <Color x:Key="CardBorderDark">#1F2937</Color>

  <!-- ===================== -->
  <!--      SHADOW COLORS    -->
  <!-- ===================== -->

  <!-- Soft outer shadow -->
  <Color x:Key="ShadowLight">#27000000</Color>
  <Color x:Key="ShadowDark">#88000000</Color>

  <!-- Glow shadows für futuristischen Effekt -->
  <Color x:Key="GlowCyan">#3300E1C6</Color>
  <Color x:Key="GlowPurple">#332D1FFF</Color>

  <!-- ===================== -->
  <!--    STATUS COLORS      -->
  <!-- ===================== -->

  <Color x:Key="SuccessLight">#10B981</Color>
  <Color x:Key="SuccessDark">#34D399</Color>

  <Color x:Key="WarningLight">#F59E0B</Color>
  <Color x:Key="WarningDark">#FBBF24</Color>

  <Color x:Key="ErrorLight">#EF4444</Color>
  <Color x:Key="ErrorDark">#F87171</Color>

  <Color x:Key="InfoLight">#3B82F6</Color>
  <Color x:Key="InfoDark">#60A5FA</Color>

  <!-- ===================== -->
  <!--    ROLE ACCENTS       -->
  <!-- ===================== -->

  <Color x:Key="HiderColor">#3B82F6</Color>
  <Color x:Key="SeekerColor">#F59E0B</Color>
  <Color x:Key="AllColor">#00E1C6</Color>

  <!-- ===================== -->
  <!--       BRUSHES         -->
  <!-- ===================== -->

  <!-- Primaries -->
  <SolidColorBrush x:Key="PrimaryBrush"
                   Color="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}"/>

  <SolidColorBrush x:Key="PrimaryActiveBrush"
                   Color="{AppThemeBinding Light={StaticResource PrimaryActiveLight}, Dark={StaticResource PrimaryActiveDark}}"/>

  <!-- Backgrounds -->
  <SolidColorBrush x:Key="BackgroundBrush"
                   Color="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"/>

  <SolidColorBrush x:Key="SurfaceBrush"
                   Color="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"/>

  <!-- Text -->
  <SolidColorBrush x:Key="TextPrimaryBrush"
                   Color="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

  <SolidColorBrush x:Key="TextSecondaryBrush"
                   Color="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>

  <SolidColorBrush x:Key="TextDisabledBrush"
                   Color="{AppThemeBinding Light={StaticResource TextDisabledLight}, Dark={StaticResource TextDisabledDark}}"/>

  <!-- Secondary Disabled Background -->
  <SolidColorBrush x:Key="SecondaryDisabledBrush"
                   Color="{AppThemeBinding Light={StaticResource SecondaryDisabledLight}, Dark={StaticResource SecondaryDisabledDark}}"/>

  <!-- Borders -->
  <SolidColorBrush x:Key="BorderBrush"
                   Color="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"/>

  <!-- Overlays -->
  <SolidColorBrush x:Key="OverlayBrush80" Color="{StaticResource OverlayDark80}"/>
  <SolidColorBrush x:Key="OverlayBrush60" Color="{StaticResource OverlayDark60}"/>

  <!-- Shadows -->
  <SolidColorBrush x:Key="ShadowBrush"
                   Color="{AppThemeBinding Light={StaticResource ShadowLight}, Dark={StaticResource ShadowDark}}"/>

  <!-- Roles -->
  <SolidColorBrush x:Key="HiderBrush" Color="{StaticResource HiderColor}"/>
  <SolidColorBrush x:Key="SeekerBrush" Color="{StaticResource SeekerColor}"/>
  <SolidColorBrush x:Key="AllBrush" Color="{StaticResource AllColor}"/>

</ResourceDictionary>
