<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/maui/global"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <!-- ========================================================= -->
  <!--                      COLORS.XAML                         -->
  <!-- ========================================================= -->
  <!--  Enthält Farbdefinitionen + passende Brushes für Light & Dark Mode  -->
  <!-- ========================================================= -->

  <!-- ==== Primary Palette ==== -->
  <Color x:Key="ColorPrimaryLight">#00BFA6</Color>
  <Color x:Key="ColorPrimaryDark">#00E1C6</Color>
  <Color x:Key="ColorPrimaryActiveLight">#009C88</Color>
  <Color x:Key="ColorPrimaryActiveDark">#00C0A7</Color>

  <!-- ==== Backgrounds ==== -->
  <Color x:Key="ColorBackgroundLight">#F8FAFC</Color>
  <Color x:Key="ColorBackgroundDark">#0F172A</Color>
  <Color x:Key="ColorSurfaceLight">#FFFFFF</Color>
  <Color x:Key="ColorSurfaceDark">#1E293B</Color>

  <!-- ==== Text ==== -->
  <Color x:Key="ColorTextPrimaryLight">#1A1A1A</Color>
  <Color x:Key="ColorTextPrimaryDark">#F1F5F9</Color>
  <Color x:Key="ColorTextSecondaryLight">#4A4A4A</Color>
  <Color x:Key="ColorTextSecondaryDark">#CBD5E1</Color>

  <!-- ==== Dividers ==== -->
  <Color x:Key="ColorDividerLight">#E5E7EB</Color>
  <Color x:Key="ColorDividerDark">#334155</Color>

  <!-- ==== Status ==== -->
  <Color x:Key="ColorSuccessLight">#10B981</Color>
  <Color x:Key="ColorSuccessDark">#34D399</Color>
  <Color x:Key="ColorWarningLight">#F59E0B</Color>
  <Color x:Key="ColorWarningDark">#FBBF24</Color>
  <Color x:Key="ColorErrorLight">#EF4444</Color>
  <Color x:Key="ColorErrorDark">#F87171</Color>
  <Color x:Key="ColorInfoLight">#3B82F6</Color>
  <Color x:Key="ColorInfoDark">#60A5FA</Color>

  <!-- ==== Shadows ==== -->
  <Color x:Key="ColorShadowLight">#14000000</Color>
  <Color x:Key="ColorShadowDark">#66000000</Color>

  <!-- ==== Group Accents ==== -->
  <Color x:Key="ColorAll">#00BFA6</Color>
  <Color x:Key="ColorHider">#3B82F6</Color>
  <Color x:Key="ColorSeeker">#F59E0B</Color>

  <!-- ========================================================= -->
  <!--                           BRUSHES                         -->
  <!-- ========================================================= -->

  <!-- === Primary Brushes === -->
  <SolidColorBrush x:Key="PrimaryBrushLight" Color="{StaticResource ColorPrimaryLight}" />
  <SolidColorBrush x:Key="PrimaryBrushDark" Color="{StaticResource ColorPrimaryDark}" />

  <SolidColorBrush x:Key="PrimaryActiveBrushLight" Color="{StaticResource ColorPrimaryActiveLight}" />
  <SolidColorBrush x:Key="PrimaryActiveBrushDark" Color="{StaticResource ColorPrimaryActiveDark}" />

  <!-- === Background Brushes === -->
  <SolidColorBrush x:Key="BackgroundBrushLight" Color="{StaticResource ColorBackgroundLight}" />
  <SolidColorBrush x:Key="BackgroundBrushDark" Color="{StaticResource ColorBackgroundDark}" />

  <SolidColorBrush x:Key="SurfaceBrushLight" Color="{StaticResource ColorSurfaceLight}" />
  <SolidColorBrush x:Key="SurfaceBrushDark" Color="{StaticResource ColorSurfaceDark}" />

  <!-- === Text Brushes === -->
  <SolidColorBrush x:Key="TextPrimaryBrushLight" Color="{StaticResource ColorTextPrimaryLight}" />
  <SolidColorBrush x:Key="TextPrimaryBrushDark" Color="{StaticResource ColorTextPrimaryDark}" />

  <SolidColorBrush x:Key="TextSecondaryBrushLight" Color="{StaticResource ColorTextSecondaryLight}" />
  <SolidColorBrush x:Key="TextSecondaryBrushDark" Color="{StaticResource ColorTextSecondaryDark}" />

  <!-- === Divider Brushes === -->
  <SolidColorBrush x:Key="DividerBrushLight" Color="{StaticResource ColorDividerLight}" />
  <SolidColorBrush x:Key="DividerBrushDark" Color="{StaticResource ColorDividerDark}" />

  <!-- === Status Brushes === -->
  <SolidColorBrush x:Key="SuccessBrushLight" Color="{StaticResource ColorSuccessLight}" />
  <SolidColorBrush x:Key="SuccessBrushDark" Color="{StaticResource ColorSuccessDark}" />

  <SolidColorBrush x:Key="WarningBrushLight" Color="{StaticResource ColorWarningLight}" />
  <SolidColorBrush x:Key="WarningBrushDark" Color="{StaticResource ColorWarningDark}" />

  <SolidColorBrush x:Key="ErrorBrushLight" Color="{StaticResource ColorErrorLight}" />
  <SolidColorBrush x:Key="ErrorBrushDark" Color="{StaticResource ColorErrorDark}" />

  <SolidColorBrush x:Key="InfoBrushLight" Color="{StaticResource ColorInfoLight}" />
  <SolidColorBrush x:Key="InfoBrushDark" Color="{StaticResource ColorInfoDark}" />

  <!-- === Accent Brushes === -->
  <SolidColorBrush x:Key="AllBrush" Color="{StaticResource ColorAll}" />
  <SolidColorBrush x:Key="HiderBrush" Color="{StaticResource ColorHider}" />
  <SolidColorBrush x:Key="SeekerBrush" Color="{StaticResource ColorSeeker}" />

</ResourceDictionary>
